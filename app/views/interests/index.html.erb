<%= render "shared/navbar2" %>
<%= render "shared/navbar3" %>
<div class="w-full bg-indigo-700 dark:bg-indigo-700">
  <div class="flex flex-col justify-center items-stretch w-full bg-indigo-700 dark:bg-indigo-700">
    <div class="pt-2 flex justify-center">
    </div>
  </div>
  <div class="bg-slate-100 h-screen flex flex-col">
    <div class="flex justify-center pt-4">
      <%= simple_form_for(@quiz) do |f| %>
        <%= f.submit 'Start Quiz', class: "mx-2 text-slate-50 focus:outline-none text-purple-800 bg-indigo-700 hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-xl px-8 py-2.5 dark:bg-purple-600 dark:hover:bg-purple-700 dark:focus:ring-purple-900" %>
      <% end %>
    </div>
    <h1 class="text-2xl font-bold pl-2 mt-2 py-2 text-center">Your Interests:</h1>
    <div class="pt-1 rounded-t-2xl overflow-x-auto flex justify-center">
      <div class="grid grid-rows-2 grid-flow-col gap-2 grow-0 w-96 overflow-x-auto px-2 justify-content">
        <% @interests.sort.reverse.each do |interest| %>
          <%= link_to interest_path(interest), class: "no-underline" do %>
            <div class="grow-0  border border-gray-200  w-36 shrink-0 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
              <img src="http://source.unsplash.com/featured/?<%= interest.name.split.join("%20") %>/800x333", class="w-36 h-24" %>
              <div class="h-16 bg-white flex flex-col justify-center grow-0 items-center">
                <h5 class="grow-0 text-center text-md font-bold tracking-tight text-gray-900 dark:text-white"><%= interest.name.capitalize %></h5>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="flex flex-col mt-1 pt-4 px-2 place-items-center ">
      <div>
        <h5 class="text-md font-bold">Add a new Interest </h5>
      </div>
      <div class="pb-8">
        <%= simple_form_for(@interest) do |f| %>
          <div class="flex gap-2 pt-0 ">
            <%= f.input :name, placeholder: "music..", class: "h-10", label: false %>
            <%= f.submit 'Add', class: "focus:outline-none text-slate-50 h-10 bg-indigo-700 hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-md px-4 py-2.5 dark:bg-purple-600 dark:hover:bg-purple-700 dark:focus:ring-purple-900" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
