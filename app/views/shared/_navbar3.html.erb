<nav class="bg-stone-900 h-14">
  <div
    data-controller="menu"

    class="
      max-w-screen-xl
      flex
      flex-wrap
      items-center
      justify-between
      mx-auto
      ">
    <%= link_to interests_path, class: "pl-2 pt-2 w-32 h-12" do %>
      <%= image_tag "logo.png" %>
    <% end %>
    <button
      data-action="menu#toggleDropdown"
      type="button"
      class="
        inline-flex
        items-center
        p-0
        mr-4
        pt-2
        ml-3
        text-sm
        text-gray-500
        rounded-lg
        focus:outline-none
        focus:ring-gray-200
        dark:text-gray-400
        dark:hover:bg-gray-700
        dark:focus:ring-gray-600
      "
      aria-expanded="false">
      <span class="sr-only">Open main m-2 menu</span>
      <div class="relative inline-block">
        <% if current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key, class: "inline-block object-cover w-8 h-8 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2" %>
        <% else %>
          <%= image_tag "default-avatar.png", class: "inline-block object-cover w-8 h-8 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2" %>
        <% end %>
        <span class="absolute top-0 right-0 inline-block w-3 h-3 bg-green-600 border-2 border-white rounded-full"></span>
      </div>
    </button>
  </nav>
